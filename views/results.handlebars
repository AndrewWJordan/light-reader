<h1>LightReader Results<br>
  <small class="text-muted">The following pages scored below 100% </small>
</h1>
<p><span class="badge badge-primary">{{average pageScores}}%</span> Overall audit score <span class="badge badge-primary">{{failTotal}} / {{reportTotal}} </span> failed reports</p>
<hr>
<div class="container-fluid">
  {{#if status}}
    <em>{{status}}</em>
  {{/if}}
  {{#if reports}}
      {{#each reports}}
        <section class="row">
            <div class="col-md-8">
                <a href="{{this.url}}" target="_blank" rel="noopener noreferrer" title="Go to page"> {{this.url}}</a>
                <div class="container-fluid">
                  <div class="row">
                    <ul>
                      {{#each message}}
                        <li>{{this}} </li>
                      {{/each}}
                    </ul>
                  </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="btn-group float-right " role="group">
                    <a class="btn btn-md btn-secondary" href="#">
                      <i class="fa fa-line-chart" aria-hidden="true"></i> {{convert score}}%</a>
                    <a class="btn btn-md btn-secondary" href="/results/{{encode this.url}}">
                        <i class="fa fa-refresh" aria-hidden="true"></i> Run Report</a>
                </div>
            </div>
        </section>
        <hr>
      {{/each}}
  {{/if}}
</div>
