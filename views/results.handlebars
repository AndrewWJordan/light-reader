<h1>LightReader Results<br>
  <small class="text-muted">The following pages scored below 100% </small>
</h1>
<p><span class="label label-pill label-primary">{{average pageScores}}%</span> Overall audit score <span class="label label-pill label-danger">{{failTotal}} / {{reportTotal}}</span> failed reports</p>
<hr>
<div class="container-fluid">
  {{#if status}}
    <em>{{status}}</em>
  {{/if}}
  {{#if reports}}
      {{#each reports}}
        <section class="row">
            <div class="col-md-8">
                <a href="{{this.url}}" target="_blank" rel="noopener noreferrer" title="Go to page"> {{this.url}}</a>
                <div class="container-fluid">
                  <div class="row">
                    <ul>
                      {{#each message}}
                        <li>{{this}} </li>
                      {{/each}}
                    </ul>
                  </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="btn-group float-right " role="group">

                      <button class="btn btn-primary" type="button">
                        <!-- <i class="fa fa-line-chart" aria-hidden="true"></i>-->
                        <span class="badge">{{convert score}}%</span> Page score
                      </button>

                    <!-- <a href="/results/{{encode this.url}}"> -->
                      <button class="btn btn-primary" type="button" onclick="location.href='/results/{{encode this.url}}'">
                        <i class="fa fa-refresh" aria-hidden="true"></i> Run Report
                      </button>
                    <!-- </a> -->
                </div>
            </div>
        </section>
        <hr>
      {{/each}}
  {{/if}}
</div>
